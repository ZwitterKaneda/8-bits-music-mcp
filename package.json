{
  "name": "8bits-music-mcp",
  "version": "0.1.0",
  "description": "MCP server for generating 8-bit music with integrated audio engine",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=packages/mcp-server",
    "start": "npm start --workspace=packages/mcp-server",
    "test": "npm test --workspaces",
    "clean": "rm -rf packages/*/dist packages/*/node_modules",
    "install:all": "npm install",
    "build:server": "npm run build --workspace=packages/mcp-server",
    "build:engine": "npm run build --workspace=packages/audio-engine"
  },
  "keywords": [
    "mcp",
    "8bit",
    "music",
    "audio",
    "tonejs"
  ],
  "author": "Daniel DÃ­az",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}